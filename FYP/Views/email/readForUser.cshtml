                            To<input id="to" name="to" class="input-group" value="@Model.From" />
                            From<input id="from1" name="from1" class="input-group" value="@Model.To" />
                        </div>
                            <div class="input-group">
                               
                                <input type="text" class="form-control" placeholder="">
                                <span class="input-group-btn">
                                 
                                    <input type="submit" class="btn btn-default" id="reply" value="Send" />
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </form>
                </div>
