                                <tr>
                                    <th>Message</th>
                                    <td><label class="">@Model.Message</label></td>
                                </tr>
                              
                            </thead>


                        </table>
                    
                    <form asp-action="replyToUser" asp-controller="email">
                        <div class="col-lg-6">
