@model Email

@{ 
    Layout = "adminLayout";
}

<div>
    <div class="form-horizontal">
        <div class="contentBox">
            <h1 class='w3layouts-title wow fadeInDown animated well well-lg footer-bottom' style="color:white">Medical Detail</h1>

            <div class="col-md-12 welcome-grids  welcome-mdl1 wow zoomIn animated well well-lg">
                <div class="panel panel-primary">
                    <!-- Default panel contents -->
                   
                        <div class="panel-heading"><h4 style="text-align:center">Patient Medication</h4></div>
                        <div class="panel-body">
                            <p>...</p>
                        </div>

                    <!-- Table -->
                    @{ 
                        string[] tokens = Model.Message.Split(',');
                        string[] Gender = tokens[0].Split(':');
                        string[] Bodypart = tokens[1].Split(':');
                        string[] Diseace = tokens[2].Split(':');
                        string[] General = tokens[3].Split(':');

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Gander: </th>
                                    <td>@Gender[1]</td>
                                </tr>
                                <tr>
                                    <th>Body Part: </th>
                                    <td>@Bodypart[1]</td>
                                </tr>
                                <tr>

                                    <th>Diseace: </th>
                                    <td>@Diseace[1]</td>
                                </tr>
                                <tr>
                                    <th>General Symptoms: </th>
                                    <td>@General[1]</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        Reply
                                    </td>
                                    <td>
                                        <form asp-action="replyToUser" asp-controller="email">
                                            <div class="col-lg-6">
                                                <div>
                                                    <input type="hidden" name="to" class="input-group" value="@Model.From" />
                                                    <input type="hidden" id="from1" name="from1" class="input-group" value="@Model.To" />
                                                </div>
                                                <div>
                                                    @*<input type="text" id="reply" name="reply" class="form-group">*@
                                                    <textarea  type="text" id="reply" name="reply" class="form-group"></textarea>
                                                </div>
                                                <div class="input-group">
                                                    <span class="input-group-btn">
                                                        <input type="submit" class="btn btn-default" value="Send" />
                                                        <a href="sdfsdf"><input type="button" value="add to table" class="btn btn-default" /></a>
                                                    </span>
                                                </div><!-- /input-group -->
                                            </div><!-- /.col-lg-6 -->
                                        </form>
                                        
                                    </td>
                                </tr>
                            </tbody>
                            
                        </table>
                    }
                </div>
                @*<div class="col-md-offset-2 col-md-10">

                        <input class="btn btn-info" data-wow-delay=".5s" type="submit" value="Start Over">
                    </div>*@
            </div>
            <div class='col-md-9'>

            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $("#reply").click(function () {


        });
    </script>
}

