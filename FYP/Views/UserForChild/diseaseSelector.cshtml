@model IEnumerable<string>

@{ 
    Layout = "navbaradmin";
}




<div>
    <div class="form-horizontal">
        <div class="contentBox">
            <h1 class='w3layouts-title wow fadeInDown animated well well-lg footer-bottom' style="color:white">Disease Selector</h1>
            
                <p class='text-info active'><b>Step 3:</b> Select a disease for which you want medication</p>
                <div class="col-md-5 welcome-grids  welcome-mdl1 wow zoomIn animated well well-lg">
                    <ul>
                        @foreach (string R in Model)
                        {
                            <li class='btn form-control btn-primary list-group-item-info diseaseselector'>@R</li>
                        }
                    </ul>
                    <a href="/email/AdminMail?gander=Child&diseace=&bodypart=@ViewBag.key"> <li class='btn form-control btn-primary list-group-item-info diseaseselector'>Other</li></a>

                
                </div>
                <div class='col-md-6'>
                    <img id="img" name="img" alt='' src=@ViewBag.imgURL data-url=@ViewBag.imgURL />
                </div>
            </div>
        </div>
    </div>
@section Scripts{
<script>
    
    $('.diseaseselector').click(function () {

        
        var key = $(this).html();
        var img = $("#img").data("url");
       
        window.location.href = "/UserForChild/GSSelector?key=" + key + "&img=" + img;

    });

</script>
    }